{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <h1 class="border border-dark rounded p-2 m-2 text-white bg-primary text-center">
            Login
    </h1>
    {% if error  %}
        <div class="alert alert-danger">
            Le login & le Mdp ne sont pas bon.
        </div>
    {% endif %}
   <form action="{{ path('login') }}" method="post">
       <div class="form-group m-2 p-2">
           <label for="exampleInputUsername1">Username</label>
           <input type="text" class="form-control" id="exampleInputUsername1" required name="_username" aria-describedby="emailHelp" placeholder="Enter Username" value="{{ lastUserName }}">
           <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
       </div>
       <div class="form-group m-2 p-2">
           <label for="exampleInputPassword1">Password</label>
           <input type="password" class="form-control" required name="_password" ="exampleInputPassword1" placeholder="Password">
       </div>

       <input type="submit" class="btn btn-primary p-2 m-3" value="Login">
   </form>
{% endblock %}
