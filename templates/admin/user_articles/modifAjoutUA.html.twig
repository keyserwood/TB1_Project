{% extends 'base.html.twig' %}

{% block title %}Edition Articles{% endblock %}

{% block body %}
    {% if app.request.attributes.get('_route') == 'creationArticleUser' %}

            <h1 class="border border-dark rounded p-2 m-2 text-white bg-primary text-center">
                Ajout
            </h1>
            {{ form_start(form) }}

            <div class="row m-2">
                {{ form_row(form.title) }}

            </div>
            <div class="form-group m-2">
                {{ form_row(form.content) }}
            </div>
            <div class="form-group m-2">
                {{ form_row(form.imageFile) }}
            </div>
            <input type="submit" class="m-2 btn btn-primary" value="Enregistrer">

            {{ form_end(form) }}
    {% elseif  app.request.attributes.get('_route') == 'modifArticlesUser'%}
                {% if  article.author.id == app.user.id %}
                    <h1 class="border border-dark rounded p-2 m-2 text-white bg-primary text-center">
                        Modification
                    </h1>
                    {{ form_start(form) }}

                    <div class="row m-2">
                        {{ form_row(form.title) }}

                    </div>
                    <div class="form-group m-2">
                        {{ form_row(form.content) }}
                    </div>
                    <input type="submit" class="m-2 btn btn-primary" value="Enregistrer">

                    {{ form_end(form) }}

                {% else %}
                      <div>
                          <h1 class="border border-dark rounded p-2 m-2 text-white bg-danger text-center">
                              Attention
                          </h1>
                        <h2 class="m-2 p-2"> Vous ne pouvez pas Ã©diter cet article ! Retournez sur <a href="{{path("admin_user_articles",{'id':app.user.id})}}">Mes articles</a>
                        </h2>
                      </div>

                {% endif %}
    {% endif %}
{% endblock %}